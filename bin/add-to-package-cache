#!/bin/sh

set -eu

usage() {
  echo "Usage: $0 [-o dir] [-j parallelism] pkgs..." 1>&2
  exit 1
}

dir="$(cd "$(dirname "$0")"; pwd)"
out=""
parallelism="1"
while getopts "o:j:" o
do
  case "$o" in
    o)
      out=${OPTARG}
      ;;
    j)
      parallelism=${OPTARG}
      ;;
    *)
      usage
      ;;
  esac
done

shift $((OPTIND-1))
pkgs=$@

if test -z "${out}"
then
  echo "You must specify a cache output dir with -o" 1>&2
  exit 1
fi

"$dir/build-packages-ifchanged" -j "$parallelism" $pkgs

tars="$(
  set -e
  for pkg in $pkgs
  do
    echo $pkg/.pkg.tar.gz
    cat $pkg/.closure
  done | sort -u
)"

mkdir -p "$out"
for tar in $tars
do
  outtar="$out/$(cat $(dirname $tar)/.pkghash).tar.gz"
  if test -e "$outtar"
  then
    continue
  fi
  echo "copying $tar to $outtar"
  cp "$tar" "$outtar.tmp"
  mv "$outtar.tmp" "$outtar"
done
