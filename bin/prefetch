#!/bin/sh
set -eu

if ! test -e ./build
then
  echo "should be run from a package directory" 1>&1
  exit 1
fi

rm -rf ./.fetch
rm -f ./fetch

for url in "$@"
do
    echo remote-name >> fetch
    echo "url = $url" >> fetch
done

mkdir .fetch
cd .fetch
curl -LK ../fetch
sha256sum * > ../sha256sums
cd ..
