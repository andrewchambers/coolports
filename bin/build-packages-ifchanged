#!/bin/sh

# Create a temporary do script so we can use the redo -j option
# in conjunction with redo-ifchange (which takes no options).

set -eu

usage() {
  echo "Usage: $0 [-j parallelism] pkgs..." 1>&2
  exit 1
}

parallelism="1"
while getopts "j:" o
do
  case $o in
    j)
      parallelism="${OPTARG}"
      ;;
    *)
      usage
      ;;
  esac
done
shift $((OPTIND-1))

dir="$(cd "$(dirname "$0")"; pwd)"
projectroot="$(realpath "$dir/..")"
doscript="$(mktemp -u "$projectroot/.build-packages.XXXXXX").do"
trap "rm -rf $doscript" EXIT

cat <<EOF > "$doscript"
#!/bin/sh
exec redo-ifchange $(printf '%s/.pkg.tar.gz' $@)
EOF

set +e
"${REDO:-redo}" -j "$parallelism" "${doscript%.do}"
exit "$?"