#!/bin/sh

set -eux

out="./venv"
while getopts "o:" o
do
  case "$o" in
    o)
      out=${OPTARG}
      ;;
    *)
      usage
      ;;
  esac
done

pkgs=$@

if test -e "$out"
then
  echo "$out already exists" 1>&2
  exit 1
fi

redo-ifchange $(
  set -e
  for pkg in $pkgs
  do
    echo "$pkg/.pkg.tar.gz"
  done
)

tars="$(
  set -e
  for pkg in $pkgs
  do
    echo $pkg/.pkg.tar.gz
    cat $pkg/.closure
  done | sort -u
)"

mkdir "$out"
for tar in $tars
do
  tar -C "$out" -xzf "$tar"
  # XXX temporary work around for permissions.
  chmod -R +w+r "$out"
done

mkdir -p "$out/bin"
cat <<EOF  > "$out/bin/venv-run"
#!/bin/sh

set -eu

unset host_binds
unset venv_binds

for b in \$(ls /)
do
  host_binds+=(--dev-bind "/\$b" "/\$b")
done

for b in \$(ls "$out")
do
  venv_binds+=(--dev-bind "$out/\$b" "/\$b")
done

exec bwrap \\
  "\${host_binds[@]}" \\
  "\${venv_binds[@]}" \\
  --chdir "\$PWD" \\
  -- "\$@"
EOF

chmod +x "$out/bin/venv-run"